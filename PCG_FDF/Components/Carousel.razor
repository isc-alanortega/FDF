@using PCG_FDF.Data.ComponentDI;
@using PCG_ENTITIES.Enums
@inject WhiteLabelManager WhiteLabel

<div class="carousel-internal">
    <MudCarousel Class="mud-width-full main-carousel" ShowArrows="true" ShowBullets="false" AutoCycle="false" TData="object">
        @switch (WhiteLabel.Current_Page)
        {
            case EPages.Cima_Shipping:
                {
                    <MudCarouselItem Transition="transition">
                        <video class="shipping-video" autoplay muted loop>
                            <source src="./assets/carousel/cima_shipping_loop.webm" type="video/webm" />
                        </video>
                    </MudCarouselItem>
                    break;
                }
            case EPages.Grupo_Bafar:
                {
                    <MudCarouselItem Transition="transition">
                        <video class="shipping-video" autoplay muted loop>
                            <source src="./assets/carousel/bafar.webm" type="video/webm" />
                        </video>
                    </MudCarouselItem>
                    break;
                }
            case EPages.The_Sharks:
                {
                    <MudCarouselItem Transition="transition">
                        <video class="sharks-video" autoplay muted loop>
                            <source src="./assets/carousel/sharks_loop.webm" type="video/webm" />
                        </video>
                    </MudCarouselItem>
                    break;
                }
            case EPages.Evergreen:
                {
                    <MudCarouselItem Transition="transition">
                        <MudImage Class="evergreen-banner" ObjectFit="ObjectFit.Fill" Src="./assets/carousel/evergreen_banner.jpg"></MudImage>
                    </MudCarouselItem>
                    break;
                }
            case EPages.SmarGo:
                {
                    <MudCarouselItem Transition="transition">
                        <MudImage Class="smargo-banner" ObjectFit="ObjectFit.Fill" Src="./assets/carousel/smargo.webp"></MudImage>
                    </MudCarouselItem>
                    break;
                }
            case EPages.CargoPi:
                {
                    break;
                }
            default:
                {
                    <MudCarouselItem Transition="transition">
                        <video class="cima-video" autoplay muted loop>
                            <source src="./assets/carousel/port.webm" type="video/webm" />
                        </video>
                    </MudCarouselItem>
                    break;
                }
        }
        <MudCarouselItem Transition="transition">
            <div class="waves-header">
                <!--Waves Container-->
                <div class="waves-container">
                    <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
                        <defs>
                            <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
                        </defs>
                        <g class="parallax">
                            <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
                            <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
                            <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
                            <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
                        </g>
                    </svg>
                </div>
                <!--Waves end-->
            </div>
        </MudCarouselItem>
    </MudCarousel>
</div>

@code {
    private Transition transition = Transition.Slide;
}