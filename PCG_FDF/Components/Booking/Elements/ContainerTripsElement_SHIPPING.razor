    private void SetIMOStatus(SATMerchQuadruplet? args)
    {
        if (args is not null)
        {
            if (args.IMO == "1")
            {
                IMO_Enabled = true;
                IMO_Required = true;
            }
            else if (args.IMO == "0,1")
            {
                IMO_Enabled = true;
                IMO_Required = false;
                TryModifyField("PACKAGING", null);
            }
            else
            {
                IMO_Enabled = false;
                IMO_Required = false;
                TryModifyField("PACKAGING", null);
            }
        }
        else
        {
            IMO_Enabled = false;
            IMO_Required = false;
            TryModifyField("PACKAGING", null);
        }
    }

