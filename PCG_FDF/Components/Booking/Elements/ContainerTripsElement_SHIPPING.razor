    private bool ValidateNewContainer()
    {
        if (GetElementReadonly())
        {
            return false;
        }
        if (Selected_Trip is null)
        {
            return false;
        }
        if (New_Container_Data is null)
        {
            return false;
        }
        if (New_Container_Data.Size is null)
        {
            ShowError("error_container_size_missing");
            return false;
        }
        if (New_Container_Data.Type is null)
        {
            ShowError("error_container_type_missing");
            return false;
        }
        if ((New_Container_Data.Type.Value == "RH" || New_Container_Data.Type.Value == "RF") && (New_Container_Data.TemperatureL_C is null || New_Container_Data.TemperatureL_F is null) && (New_Container_Data.TemperatureH_C is null || New_Container_Data.TemperatureH_F is null))
        {
            ShowError("error_container_temperature_missing");
            return false;
        }
        if (string.IsNullOrEmpty(New_Container_Data.Container_Serial))
        {
            ShowError("error_container_serial_invalid");
            return false;
        }
        if (!Validations.IsValidContainerSerial(New_Container_Data.Container_Serial))
        {
            ShowError("error_container_serial_invalid");
            return false;
        }
        if (Trips_Data.Trips.Values.SelectMany(trip => trip.Containers.Values).Any(container => container.Container_Serial == New_Container_Data.Container_Serial))
        {
            var repeated = Trips_Data.Trips.Values.SelectMany(trip => trip.Containers.Values).First(container => container.Container_Serial == New_Container_Data.Container_Serial);
            if (Editing)
            {
                if (repeated.Container_UUID != New_Container_Data.Container_UUID)
                {
                    ShowError("error_container_serial_repeated");
                    return false;
                }
            }
            else
            {
                ShowError("error_container_serial_repeated");
                return false;
            }
        }
        return true;
    }

